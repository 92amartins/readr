PKG_CXXFLAGS = -I. -Ircon
PKG_LIBS = -L. -lrcon -L../inst/rcon -Wl,-rpath,'$$ORIGIN/../rcon'

all: $(SHLIB)

$(SHLIB): ../inst/rcon/librcon.so

UNAME:=$(shell uname -s)
ifeq ($(UNAME), Darwin)
../inst/rcon/librcon.so: rcon/connection.o
	$(SHLIB_LINK) -o $@ $^ -Wl,-install_name,@loader_path/../rcon/librcon.so
else
../inst/rcon/librcon.so: rcon/connection.o
	$(SHLIB_LINK) -o $@ $^
endif

clean:
	rm -f rcon/connection.o ../inst/rcon/librcon.so
